                  <MenuItem mnemonicParsing="false" onAction="#saveDiagram" text="Save As…" />
                  <MenuItem mnemonicParsing="false" onAction="#ExportDiagram" text="Export As..." />
                  <SeparatorMenuItem mnemonicParsing="false" />
